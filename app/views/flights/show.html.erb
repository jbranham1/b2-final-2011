<h1>Flight Number: <%= @flight.flight_number %></h1>
<p>Date: <%= @flight.date %></p>
<p>Time: <%= @flight.time %></p>
<p>Departure City: <%= @flight.departure_city %></p>
<p>Arrival City: <%= @flight.arrival_city %></p>

<div class ='flight-passengers'>
  <h3>Passengers: </h3>
  <% @flight.passengers.each do |passenger|  %>
    <section class="passenger-<%= passenger.id %>"
      <p><%= passenger.name %> <%= button_to 'Remove', flight_passenger_path(@flight, passenger), method: :delete %></p>
      </section>
  <% end %>
</div>
<div class ='average-age'>
  <h3>Average Age of Adult Passengers: <%= @flight.average_age_of_adult_passengers %></h3>
</div>
